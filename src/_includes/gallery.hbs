<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  {{#if items}}
    {{#each items}}
      <div class="border rounded-lg overflow-hidden shadow-lg bg-white">
        <img src="{{this.image}}" alt="{{this.name}}" class="w-full h-48 object-cover">
        <div class="p-4">
          <h2 class="font-bold text-xl mb-2 text-primary-{{ ../pageColor }}">{{this.name}}</h2>
          <p class="text-gray-700">{{this.description}}</p>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>No items to display</p>
  {{/if}}
</div>
