<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-4">
  {{#if items}}
    {{#each items}}
      <div class="border rounded-lg overflow-hidden shadow-lg bg-white">
        <div class="aspect-square overflow-hidden">
          <img src="{{this.image}}" alt="{{this.name}}" class="w-full h-full object-cover">
        </div>
        <div class="p-2">
          <h2 class="font-bold text-sm mb-1 text-primary-{{ ../pageColor }}">{{this.name}}</h2>
          <p class="text-xs text-gray-700">{{this.description}}</p>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p>No items to display</p>
  {{/if}}
</div>
